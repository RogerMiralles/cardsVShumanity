<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xokundevs.cardsvshumanity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.xokundevs.cardsvshumanity.actiPartida.PartidaEscogeCartasActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiPartida.PrePartidaActivity"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiPartida.Partida"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiBarajas.EditarBaraja"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiPartida.UnirsePartida"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiPartida.CrearPartida"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiBarajas.Barajas"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiPartida.SegundaVentana"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiLogReg.Registre"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name="com.xokundevs.cardsvshumanity.actiLogReg.Login"
            android:screenOrientation="sensorLandscape" />
    </application>

</manifest>