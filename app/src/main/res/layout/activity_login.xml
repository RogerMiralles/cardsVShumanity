<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logReg.login">

    <EditText
        android:id="@+id/eTxtCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="161dp"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/eTxtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="300dp"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/txtCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contrase_a"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="256dp" />

    <Button
        android:id="@+id/btnLogear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLogear"
        android:text="@string/logear"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
        android:id="@+id/btnResgistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickRegistrar"
        android:text="@string/registrarse"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="495dp" />
</android.support.constraint.ConstraintLayout>