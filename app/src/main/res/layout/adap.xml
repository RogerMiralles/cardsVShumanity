<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_view_holder"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/etTextoViewHolder"
        style="@style/word_title"
        app:layout_constraintBottom_toTopOf="@+id/btnEditarBaraja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditarBaraja"
        style="@style/btn"
        android:text="@string/editarBaraja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTextoViewHolder" />


</android.support.constraint.ConstraintLayout>