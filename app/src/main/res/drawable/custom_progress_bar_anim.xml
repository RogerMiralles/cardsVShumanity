<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <layer-list>
            <item>
                <rotate
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fromDegrees="359"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="179">
                    <shape android:shape="oval">
                        <size
                            android:width="16dp"
                            android:height="16dp" />
                        <stroke
                            android:width="5dp"
                            android:color="#FFFFFF"
                            android:dashWidth="43dp"
                            android:dashGap="50dp" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="359">
                    <shape android:shape="oval">
                        <size
                            android:width="32dp"
                            android:height="32dp" />
                        <stroke
                            android:width="5dp"
                            android:color="#00000000"
                            android:dashWidth="4dp"
                            android:dashGap="2dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>